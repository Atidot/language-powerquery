category:            Other
extra-source-files:  CHANGELOG.md

library
  exposed-modules:     Language.PowerQuery.Editor.Editor
  -- other-modules:
  -- other-extensions:
  build-depends:       base
                     , lens
                     , aeson
                     , bytestring
                     , text
                     , language-powerquery-ast
                     , language-powerquery
                     , jsaddle
                     , ghcjs-dom
                     , reflex
                     , reflex-dom
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite language-powerquery-editor-tests
  type:             exitcode-stdio-1.0
  hs-source-dirs:   test
  main-is:          Spec.hs
  build-depends:    base
                  , hspec
  ghc-options:      -Wall
  default-language: Haskell2010

executable language-powerquery-editor
  main-is:             Main.hs
  -- other-modules:
  -- other-extensions:
  build-depends:       base
                     , optparse-applicative
                     , language-powerquery-editor
  hs-source-dirs:      app
  default-language:    Haskell2010
